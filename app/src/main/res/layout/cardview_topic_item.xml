<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:stateListAnimator="@animator/touch_item"
    android:id="@+id/cv_topic_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id = "@+id/ll_hot_topic_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_hot_topic_title"
            android:padding="5dp"
            android:textSize="@dimen/textSizeMedium"
            android:textColor="@color/colorTopicTextPrimary"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_hot_topic_board"
                android:padding="5dp"
                android:textSize="@dimen/textSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorTopicTextSecondary"/>
            <TextView
                android:id="@+id/tv_hot_topic_viewed_count"
                android:padding="5dp"
                android:textSize="@dimen/textSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorTopicTextSecondary"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>