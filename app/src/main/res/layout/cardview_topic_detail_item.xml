<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_topic_detail_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:stateListAnimator="@animator/touch_item">

    <LinearLayout
        android:id="@+id/ll_topic_detaild_header"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_topic_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:layout_alignParentStart="true"
                tools:text = "Author"/>
            <TextView
                android:id="@+id/tv_topic_detail_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:layout_alignParentEnd="true"
                tools:text = "楼主"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_topic_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeSmall"
            tools:text = "2016-09-23 19:16:49"/>
        <LinearLayout
            android:id="@+id/ll_topic_detaild_content_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_topic_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>